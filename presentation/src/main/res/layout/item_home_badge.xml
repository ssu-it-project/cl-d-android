<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_badge"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/layout_main_badge"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/iv_badge_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_badge_point"
            app:layout_constraintBottom_toBottomOf="@id/tv_badge_point"
            app:layout_constraintRight_toLeftOf="@id/tv_badge_point"
            android:layout_marginEnd="4dp"
            android:src="@drawable/ic_badge_point"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_badge_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:text="12"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/iv_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:src="@drawable/ic_badge_example"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_badge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/iv_badge"
            app:layout_constraintBottom_toTopOf="@id/tv_badge_description"
            app:layout_constraintLeft_toRightOf="@id/iv_badge"
            app:layout_constraintRight_toLeftOf="@id/iv_badge_point"
            app:layout_constraintVertical_chainStyle="packed"
            android:textSize="16sp"
            android:textColor="#EBA640"
            android:textStyle="bold"
            android:text="@string/title_not_exist_badge"/>

        <TextView
            android:id="@+id/tv_badge_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_badge_title"
            app:layout_constraintBottom_toTopOf="@id/tv_badge_rate"
            app:layout_constraintLeft_toLeftOf="@id/tv_badge_title"
            app:layout_constraintRight_toRightOf="@id/tv_badge_title"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:textColor="#4C37CD"
            android:text="돌잡이들의 왕"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_badge_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_badge_description"
            app:layout_constraintBottom_toBottomOf="@id/iv_badge"
            app:layout_constraintLeft_toLeftOf="@id/tv_badge_title"
            app:layout_constraintRight_toRightOf="@id/tv_badge_title"
            android:textSize="11sp"
            android:textColor="#5A5A5A"
            android:text="@string/description_not_exist_badge"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>