<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/profile_image_example"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintLeft_toRightOf="@id/iv_user_profile"
        android:layout_marginStart="10dp"
        android:text="NaDiapla"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_more"
        android:visibility="invisible"/>

    <VideoView
        android:id="@+id/vv_feed_video"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="10dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_feed_thumbnail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/iv_user_profile"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/tv_feed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vv_feed_video"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:text="이게 진짜 가능하다고?"/>

    <ImageView
        android:id="@+id/iv_feed_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/vv_feed_video"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_share"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_feed_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_feed_share"
        app:layout_constraintBottom_toBottomOf="@id/iv_feed_share"
        app:layout_constraintRight_toLeftOf="@id/iv_feed_share"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_comment"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/iv_feed_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_feed_share"
        app:layout_constraintBottom_toBottomOf="@id/iv_feed_share"
        app:layout_constraintRight_toLeftOf="@id/iv_feed_comment"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_like"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/tv_feed_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_feed_title"
        android:layout_marginTop="3dp"
        android:textSize="11sp"
        android:textColor="@color/text_color_8F9194"
        android:text="강남 더클라임 | A | 빨강"/>

    <TextView
        android:id="@+id/tv_feed_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_feed_info"
        app:layout_constraintLeft_toLeftOf="@id/tv_feed_title"
        android:textSize="11sp"
        android:textColor="@color/text_color_8F9194"
        android:text="2023.08.17"/>

    <ProgressBar
        android:id="@+id/pb_loading_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/vv_feed_video"
        app:layout_constraintBottom_toBottomOf="@id/vv_feed_video"
        app:layout_constraintLeft_toLeftOf="@id/vv_feed_video"
        app:layout_constraintRight_toRightOf="@id/vv_feed_video"/>

</androidx.constraintlayout.widget.ConstraintLayout>