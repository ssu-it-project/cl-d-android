<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="term"
            type="com.seumulseumul.domain.model.Term" />

        <variable
            name="checkAgreeClickListener"
            type="com.seumulseumul.cld.ui.signup.OnItemClickListener" />

        <variable
            name="showDetailClickListener"
            type="com.seumulseumul.cld.ui.signup.OnItemClickListener" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/cb_terms_agree"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginTop="2dp"
            android:onClick="@{(view) -> checkAgreeClickListener.onItemClick(term)}"
            android:checked="@{term.agreed}"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_terms_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{term.name}"
            android:textColor="@color/default_text_color"
            app:layout_constraintBottom_toBottomOf="@id/cb_terms_agree"
            app:layout_constraintLeft_toRightOf="@id/cb_terms_agree"
            app:layout_constraintTop_toTopOf="@id/cb_terms_agree" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_terms_content"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:onClick="@{(view) -> showDetailClickListener.onItemClick(term)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_terms_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@drawable/right_arrow_icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>