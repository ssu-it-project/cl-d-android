<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_badge"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/main_badge_layout">

                <ImageView
                    android:id="@+id/iv_badge_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/tv_badge_point"
                    app:layout_constraintBottom_toBottomOf="@id/tv_badge_point"
                    app:layout_constraintRight_toLeftOf="@id/tv_badge_point"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_badge_point"/>

                <TextView
                    android:id="@+id/tv_badge_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="10dp"
                    android:text="12"/>

                <ImageView
                    android:id="@+id/iv_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_marginStart="15dp"
                    android:src="@drawable/ic_badge_example"/>

                <TextView
                    android:id="@+id/tv_badge_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/iv_badge"
                    app:layout_constraintBottom_toTopOf="@id/tv_badge_description"
                    app:layout_constraintLeft_toRightOf="@id/iv_badge"
                    app:layout_constraintRight_toLeftOf="@id/iv_badge_point"
                    app:layout_constraintVertical_chainStyle="packed"
                    android:textSize="16sp"
                    android:textColor="#EBA640"
                    android:textStyle="bold"
                    android:text="돌잡이들의 왕"/>

                <TextView
                    android:id="@+id/tv_badge_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_badge_title"
                    app:layout_constraintBottom_toTopOf="@id/tv_badge_rate"
                    app:layout_constraintLeft_toLeftOf="@id/tv_badge_title"
                    app:layout_constraintRight_toRightOf="@id/tv_badge_title"
                    android:layout_marginTop="10dp"
                    android:textSize="11sp"
                    android:textColor="#4C37CD"
                    android:text="돌잡이들의 왕"/>

                <TextView
                    android:id="@+id/tv_badge_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_badge_description"
                    app:layout_constraintBottom_toBottomOf="@id/iv_badge"
                    app:layout_constraintLeft_toLeftOf="@id/tv_badge_title"
                    app:layout_constraintRight_toRightOf="@id/tv_badge_title"
                    android:textSize="11sp"
                    android:textColor="#5A5A5A"
                    android:text="돌잡이 중 10% 획득"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_feed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toBottomOf="@id/layout_badge"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="?attr/actionBarSize"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>