<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
        android:id="@+id/vv_record"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0.6"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_like_fill"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toTopOf="@id/tv_record_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_record_created_date"
        android:layout_marginBottom="5dp"
        android:src="@drawable/profile_image_example"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/iv_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_user_profile"
        app:layout_constraintLeft_toRightOf="@id/iv_user_profile"
        android:layout_marginStart="8dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="NaDiapla"/>

    <TextView
        android:id="@+id/tv_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_record_info"
        app:layout_constraintLeft_toLeftOf="@id/tv_record_created_date"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="이게 진짜 가능하다고?"/>

    <TextView
        android:id="@+id/tv_record_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/tv_record_created_date"
        app:layout_constraintLeft_toLeftOf="@id/tv_record_created_date"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="강남 더클라임 | A | 빨강"/>
    
    <TextView
        android:id="@+id/tv_record_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:textSize="11sp"
        android:textColor="@color/white"
        android:text="2023.08.17"/>

    <ProgressBar
        android:id="@+id/pb_loading_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>