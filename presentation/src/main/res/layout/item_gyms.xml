<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="climeGym"
            type="com.seumulseumul.domain.model.ClimbingGym" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_gym_thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="3dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <ImageView
                android:id="@+id/iv_gym_thumbnail"
                android:layout_width="90dp"
                android:layout_height="90dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_gym_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/cv_gym_thumbnail"
            app:layout_constraintLeft_toRightOf="@id/cv_gym_thumbnail"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="@{climeGym.place.name}"/>

        <TextView
            android:id="@+id/tv_gym_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_gym_name"
            app:layout_constraintLeft_toLeftOf="@id/tv_gym_name"
            android:textSize="12sp"
            android:textColor="@color/text_color_8F9194"
            android:text="@{climeGym.place.roadAddressName}" />

        <ImageView
            android:id="@+id/iv_parking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cv_gym_thumbnail"
            app:layout_constraintLeft_toLeftOf="@id/tv_gym_name"
            android:src="@drawable/baseline_directions_car_17"/>

        <TextView
            android:id="@+id/tv_gym_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/cv_gym_thumbnail"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="5dp"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:text="@{climeGym.location.distance}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>