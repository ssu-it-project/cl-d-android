<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_record"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:tabGravity="start"
        app:tabMode="scrollable"
        app:tabTextAppearance="@style/tabTextSizeBold"
        app:tabIndicatorColor="@color/default_enable_color"
        app:tabSelectedTextColor="@color/default_enable_color"
        app:tabTextColor="#212529" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_record"
        android:layout_width="0dp"
        android:layout_height="370dp"
        app:layout_constraintTop_toBottomOf="@id/tab_layout_record"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_animation"
        android:layout_width="0dp"
        android:layout_height="620dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_cl_d"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            app:lottie_rawRes="@raw/animation_cl_d"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_record"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="620dp"
        android:visibility="gone">

        <VideoView
            android:id="@+id/vv_record_video"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="25dp"/>

        <EditText
            android:id="@+id/et_record_content"
            android:layout_width="0dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@id/vv_record_video"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:textSize="13sp"
            android:gravity="top"
            android:padding="5dp"
            android:background="@color/level_disable_color"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="내용을 추가해주세요." />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_record_gym"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/et_record_content"
            app:layout_constraintBottom_toTopOf="@id/layout_record_sector"
            app:layout_constraintLeft_toLeftOf="@id/et_record_content"
            app:layout_constraintRight_toRightOf="@id/et_record_content"
            app:layout_constraintVertical_chainStyle="packed"
            android:background="@color/level_disable_color">

            <TextView
                android:id="@+id/tv_record_gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="#FF515151"
                android:textStyle="bold"
                android:text="더클라임 서울대점"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_record_sector"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/layout_record_gym"
            app:layout_constraintBottom_toTopOf="@id/layout_record_level"
            app:layout_constraintLeft_toLeftOf="@id/et_record_content"
            app:layout_constraintRight_toRightOf="@id/et_record_content"
            android:layout_marginTop="5dp"
            android:background="@color/level_disable_color">

            <TextView
                android:id="@+id/tv_record_sector_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="#FF515151"
                android:textStyle="bold"
                android:text="ST."/>

            <TextView
                android:id="@+id/tv_record_sector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_record_sector_title"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:textColor="#FF515151"
                android:text="7"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_record_level"
            android:layout_width="0dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@id/layout_record_sector"
            app:layout_constraintBottom_toTopOf="@id/btn_record"
            app:layout_constraintLeft_toLeftOf="@id/et_record_content"
            app:layout_constraintRight_toRightOf="@id/et_record_content"
            android:layout_marginTop="5dp"
            android:background="@color/level_disable_color">

            <TextView
                android:id="@+id/tv_record_level_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="10dp"
                android:textSize="15sp"
                android:textColor="#FF515151"
                android:textStyle="bold"
                android:text="Lv. "/>

            <ImageView
                android:id="@+id/iv_record_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tv_record_level_title"
                android:layout_marginStart="5dp"
                android:src="@drawable/level_white"/>

            <TextView
                android:id="@+id/tv_record_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/iv_record_level"
                android:layout_marginStart="2dp"
                android:textSize="15sp"
                android:textColor="#FF515151"
                android:text="흰색"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_record"
            android:layout_width="0dp"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/et_record_content"
            app:layout_constraintRight_toRightOf="@id/et_record_content"
            android:layout_marginBottom="25dp"
            android:text="기록하기"
            android:background="@drawable/start_button_enabled"
            android:textColor="@color/white" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/pb_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>